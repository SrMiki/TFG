<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_suitcase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secundary_800"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"

        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/activity_createSuitcase_input_suitcaseName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="20"
                android:hint="@string/hint_InputSuitcaseName"
                android:inputType="textPersonName"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 0dp for weight -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/suticase_suitcaseColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/activity_createSuitcase_input_suitcaseNameColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/hint_suitcaseColor"
                android:inputType="textPersonName"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 0dp for weight -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/suticase_suticaseWeight"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/activity_createSuitcase_input_suitcaseWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="@string/suticase_number0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suitcase_suticaseDims"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/card_view_suitcase_heigth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:text="@string/suticase_number0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/suticase_charX"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/card_view_suitcase_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:text="@string/suticase_number0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/suticase_charX"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/card_view_suitcase_depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:text="@string/suticase_number0" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
