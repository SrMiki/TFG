<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_createTrip"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/fragment_createTrip_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switchDates_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_Destino"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fragment_createTrip_input_tripDestino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:hint="@string/text_hintInputDestino"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/text_travelDate"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_createTrip_input_travelDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/text_hintInputDate"
            android:inputType="date"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_createTrip_LayoutInput_tripReturnDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_createTrip_text_tripReturnDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/text_returnDate"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fragment_createTrip_input_tripReturnDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:maxLines="1" />
    </LinearLayout>

    <!-- TODO campo returnDate, travelTrip returnTravel
        -->

    <Button
        android:id="@+id/fragment_createTrip_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:text="@string/btn_next">

    </Button>

</LinearLayout>
