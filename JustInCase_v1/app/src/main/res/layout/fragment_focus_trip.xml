<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_focusTrip_title"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/fragment_focusTrip_Destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_Destino"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_focusTrip_tripDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fragment_focusTrip_Destino"
            android:text="nombre maleta"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_focusTrip_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_focusTrip_tripDestino"
            android:text="descripcion" />


        <TextView
            android:id="@+id/fragment_focusTrip_tripDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_focusTrip_tripDestino"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fragment_focusTrip_Date"
            android:text="descripcion" />
    </RelativeLayout>

    <Button
        android:id="@+id/fragment_focusTrip_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:onClick="onClick"

        android:text="@string/btn_delete"
        app:backgroundTint="@color/secundary_700">

    </Button>


</LinearLayout>