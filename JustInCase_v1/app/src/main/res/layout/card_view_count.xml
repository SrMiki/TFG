<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recyclerview_elementCount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="nombre item"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recyclerview_elementCount_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cantidad"
            android:layout_gravity="center_vertical"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recyclerview_elementCount_btnDecrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/recyclerview_elementCount_btnIncrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/green"
            android:text="+"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>